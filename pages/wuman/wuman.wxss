/* pages/wuman/wuman.wxss */
.list {
  display: flex;
  flex-wrap: wrap;
}
.list_item {
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
  position: relative;
}
.integral {
  position: absolute;
  top:10rpx;
  right: 10rpx;
  font-size: 24rpx;
  background: rgba(194, 12, 103, 0.6);
  color: #fff;
  padding: 5rpx 10rpx;
}
.list_item image {
  width: 100%;
  height: 350rpx;
}
.list_item .name {
  font-size: 30rpx;
}
.list_item .info {
  color: #999;
  font-size: 26rpx;
}
.list_item .info text {
  margin-right: 10rpx;
}